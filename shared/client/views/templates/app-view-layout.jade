


// Navbar
nav.navbar.navbar-default.desktop-only
  .container-fluid
    form.navbar-form.navbar-left
      .form-group
        .btn-toolbar(role='toolbar')
          .btn-group
            a.btn.btn-toolbar.btn-primary(type="button" href='/#/apps/home')
              i.fa.fa-bars
              br
              small.small Menu

          block view-toolbar-left

    form.navbar-form.navbar-right
      .form-group
        .btn-toolbar(role='toolbar')
          block view-toolbar-right

          .btn-group
            button.btn.btn-toolbar.btn-primary(id ='darkModeBtn' ng-controller='darkModeCtrl' type='button'  ng-class="{'btn-light' : darkMode, 'btn-dark': !darkMode  }")
              i.fa.fa-sun-o
              br
              small.small 
              
            a.btn.btn-toolbar.btn-primary(type="button" href='/#/apps/about')
              i.fa.fa-exclamation-circle
              br
              small.small About
            a.btn.btn-toolbar.btn-primary(type="button" href='/doc' target="_blank")
              i.fa.fa-question-circle
              br
              small.small Help

nav.btn-group.btn-group-justified.compact-only#top-compact-navbar
  a.btn.btn-toolbar.btn-info(type="button" href='/#/apps/home')
    i.fa.fa-bars
    |  
    small.small Menu

// content
.container-fluid#view-content-container
  block view-content

